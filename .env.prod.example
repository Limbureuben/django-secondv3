# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================

# ========================================
# DJANGO CORE SETTINGS
# ========================================
SECRET_KEY=GENERATE-NEW-SECRET-KEY-FOR-PRODUCTION
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# ========================================
# DATABASE CONFIGURATION
# ========================================
POSTGRES_DB=your_db_name
POSTGRES_USER=Your_db_user
POSTGRES_PASSWORD=Your_trong_db_passwrd
DB_HOST=db
DB_PORT=your_db_port(default=5432)

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://redis:6379/0

# ========================================
# CELERY CONFIGURATION
# ========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ========================================
# EMAIL CONFIGURATION (Production SMTP)
# ========================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=your-production-email@gmail.com

# ========================================
# FRONTEND & BACKEND URLS
# ========================================
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# ========================================
# SMS SERVICES (Production)
# ========================================
# Africa's Talking
AT_USERNAME=your-production-username
AT_API_KEY=your-production-at-api-key

# Beem SMS
BEEM_API_KEY=your-production-beem-api-key
BEEM_SECRET_KEY=your-production-beem-secret-key
BEEM_SENDER_ID=YOUR_SENDER_ID

# ========================================
# ENCRYPTION
# ========================================
FERNET_KEY=GENERATE-NEW-FERNET-KEY-FOR-PRODUCTION

# ========================================
# CORS SETTINGS
# ========================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ========================================
# SECURITY SETTINGS (Production)
# ========================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY